<%- include('../partials/header', { title: 'Audit Error - SiteScope', user: user }) %>

<!-- Error Section -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <!-- Error Icon -->
                <div class="mb-4">
                    <i class="fas fa-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                </div>

                <!-- Error Message -->
                <h1 class="display-6 fw-bold mb-4">Audit Failed</h1>
                <p class="lead text-muted mb-4">
                    We encountered an issue while analyzing your website.
                </p>

                <!-- Error Details -->
                <div class="card bg-light mb-4">
                    <div class="card-body">
                        <h5 class="card-title text-danger">
                            <i class="fas fa-info-circle me-2"></i>Error Details
                        </h5>
                        <p class="card-text text-muted">
                            <%= error || 'An unexpected error occurred during the audit process.' %>
                        </p>
                    </div>
                </div>

                <!-- Common Solutions -->
                <div class="row g-4 mb-5">
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-globe fa-2x text-primary mb-3"></i>
                                <h6>Check URL</h6>
                                <p class="small text-muted">Make sure the URL is correct and the website is accessible</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-shield-alt fa-2x text-primary mb-3"></i>
                                <h6>Security Settings</h6>
                                <p class="small text-muted">Some websites block automated crawlers for security reasons</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-clock fa-2x text-primary mb-3"></i>
                                <h6>Try Again Later</h6>
                                <p class="small text-muted">The website might be temporarily unavailable</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="d-flex justify-content-center gap-3">
                    <a href="/audit" class="btn btn-primary btn-lg">
                        <i class="fas fa-redo me-2"></i>Try Another URL
                    </a>
                    <a href="/" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-home me-2"></i>Go Home
                    </a>
                </div>

                <!-- Support Info -->
                <div class="mt-5">
                    <small class="text-muted">
                        <i class="fas fa-question-circle me-1"></i>
                        If you continue to experience issues, please 
                        <a href="/contact" class="text-decoration-none">contact our support team</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../partials/footer') %>
