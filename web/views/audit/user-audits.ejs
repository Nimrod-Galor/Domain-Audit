<%- include('../partials/header', { title: title, user: user }) %>

<!-- User Audits Section -->
<section class="py-5">
  <div class="container">
    <!-- Header -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h2 class="mb-1">
              <i class="fas fa-list text-primary"></i>
              My Audits
            </h2>
            <p class="text-muted mb-0">
              View and manage all your website audits
            </p>
          </div>
          <div>
            <a href="/audit" class="btn btn-primary">
              <i class="fas fa-plus"></i>
              New Audit
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <form method="GET" action="/audit/my-audits" class="row g-3">
              <div class="col-md-3">
                <label for="status" class="form-label">Status</label>
                <select class="form-select" id="status" name="status">
                  <option value="">All Statuses</option>
                  <option value="completed" <%= currentStatus === 'completed' ? 'selected' : '' %>>Completed</option>
                  <option value="pending" <%= currentStatus === 'pending' ? 'selected' : '' %>>Pending</option>
                  <option value="failed" <%= currentStatus === 'failed' ? 'selected' : '' %>>Failed</option>
                </select>
              </div>
              <div class="col-md-3">
                <label for="sortBy" class="form-label">Sort By</label>
                <select class="form-select" id="sortBy" name="sortBy">
                  <option value="created_at" <%= currentSort.by === 'created_at' ? 'selected' : '' %>>Date Created</option>
                  <option value="score" <%= currentSort.by === 'score' ? 'selected' : '' %>>Score</option>
                  <option value="url" <%= currentSort.by === 'url' ? 'selected' : '' %>>URL</option>
                </select>
              </div>
              <div class="col-md-3">
                <label for="sortOrder" class="form-label">Order</label>
                <select class="form-select" id="sortOrder" name="sortOrder">
                  <option value="DESC" <%= currentSort.order === 'DESC' ? 'selected' : '' %>>Newest First</option>
                  <option value="ASC" <%= currentSort.order === 'ASC' ? 'selected' : '' %>>Oldest First</option>
                </select>
              </div>
              <div class="col-md-3">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-outline-primary w-100">
                  <i class="fas fa-filter"></i>
                  Apply Filters
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <% if (audits.length === 0) { %>
      <!-- No Audits Message -->
      <div class="row">
        <div class="col-12">
          <div class="alert alert-info text-center">
            <i class="fas fa-info-circle fs-1 text-primary mb-3"></i>
            <h4>No audits found</h4>
            <p class="mb-3">You haven't run any audits yet, or no audits match your current filters.</p>
            <a href="/audit" class="btn btn-primary">
              <i class="fas fa-search"></i>
              Run Your First Audit
            </a>
          </div>
        </div>
      </div>
    <% } else { %>
      <!-- Audits List -->
      <div class="row">
        <div class="col-12">
          <div class="card shadow-sm">
            <div class="card-header bg-light">
              <h5 class="mb-0">
                <i class="fas fa-chart-line"></i>
                Your Audits (<%= audits.length %> of <%= pagination.totalCount %>)
              </h5>
            </div>
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table table-hover mb-0">
                  <thead class="table-light">
                    <tr>
                      <th>Domain</th>
                      <th>Type</th>
                      <th>Score</th>
                      <th>Status</th>
                      <th>Date</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% audits.forEach(audit => { %>
                      <tr>
                        <td>
                          <div class="d-flex align-items-center">
                            <i class="fas fa-globe text-primary me-2"></i>
                            <div>
                              <div class="fw-medium"><%= audit.url %></div>
                              <small class="text-muted">#<%= audit.id %></small>
                            </div>
                          </div>
                        </td>
                        <td>
                          <span class="badge bg-<%= audit.audit_type === 'full' ? 'primary' : 'secondary' %>">
                            <%= audit.audit_type === 'full' ? 'Full' : 'Simple' %>
                          </span>
                        </td>
                        <td>
                          <% if (audit.score !== null && audit.score !== undefined) { %>
                            <span class="badge bg-<%= audit.score >= 80 ? 'success' : audit.score >= 60 ? 'warning' : 'danger' %>">
                              <%= audit.score %>/100
                            </span>
                          <% } else { %>
                            <span class="text-muted">-</span>
                          <% } %>
                        </td>
                        <td>
                          <span class="badge bg-<%= audit.status === 'completed' ? 'success' : audit.status === 'failed' ? 'danger' : 'warning' %>">
                            <%= audit.status %>
                          </span>
                        </td>
                        <td>
                          <div>
                            <span class="fw-medium"><%= new Date(audit.created_at).toLocaleDateString() %></span>
                            <small class="text-muted d-block"><%= new Date(audit.created_at).toLocaleTimeString() %></small>
                          </div>
                        </td>
                        <td>
                          <div class="btn-group btn-group-sm" role="group">
                            <% if (audit.status === 'completed') { %>
                              <a href="/audit/history/<%= encodeURIComponent(audit.url) %>/<%= audit.id %>/simple" 
                                 class="btn btn-outline-primary" title="View Simple Report">
                                <i class="fas fa-eye"></i>
                              </a>
                              <a href="/audit/history/<%= encodeURIComponent(audit.url) %>/<%= audit.id %>/full" 
                                 class="btn btn-outline-success" title="View Full Report">
                                <i class="fas fa-chart-bar"></i>
                              </a>
                            <% } else { %>
                              <button class="btn btn-outline-secondary" disabled title="Report not available">
                                <i class="fas fa-eye-slash"></i>
                              </button>
                            <% } %>
                            <a href="/audit/history/<%= encodeURIComponent(audit.url) %>" 
                               class="btn btn-outline-info" title="View Domain History">
                              <i class="fas fa-history"></i>
                            </a>
                          </div>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Pagination -->
      <% if (pagination.totalPages > 1) { %>
        <div class="row mt-4">
          <div class="col-12">
            <nav aria-label="Audits pagination">
              <ul class="pagination justify-content-center">
                <% if (pagination.hasPrev) { %>
                  <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage - 1 %>&status=<%= currentStatus || '' %>&sortBy=<%= currentSort.by %>&sortOrder=<%= currentSort.order %>">
                      <i class="fas fa-chevron-left"></i>
                      Previous
                    </a>
                  </li>
                <% } %>
                
                <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(pagination.totalPages, currentPage + 2); i++) { %>
                  <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>&status=<%= currentStatus || '' %>&sortBy=<%= currentSort.by %>&sortOrder=<%= currentSort.order %>">
                      <%= i %>
                    </a>
                  </li>
                <% } %>
                
                <% if (pagination.hasNext) { %>
                  <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage + 1 %>&status=<%= currentStatus || '' %>&sortBy=<%= currentSort.by %>&sortOrder=<%= currentSort.order %>">
                      Next
                      <i class="fas fa-chevron-right"></i>
                    </a>
                  </li>
                <% } %>
              </ul>
            </nav>
            
            <div class="text-center text-muted">
              Showing <%= ((currentPage - 1) * pagination.limit) + 1 %> to <%= Math.min(currentPage * pagination.limit, pagination.totalCount) %> of <%= pagination.totalCount %> audits
            </div>
          </div>
        </div>
      <% } %>
    <% } %>
  </div>
</section>

<%- include('../partials/footer') %>
