# E2E Test Environment Configuration Example
# Copy this file to .env.e2e and update the values

# Application URL for E2E tests
E2E_BASE_URL=http://127.0.0.1:3000

# Test Database (can use same as test or separate)
TEST_DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# E2E Environment Settings
NODE_ENV=e2e
LOG_LEVEL=warn

# Session configuration for E2E
SESSION_SECRET=your_e2e_session_secret_here

# Disable external services in E2E tests
DISABLE_EMAIL=true
DISABLE_STRIPE=true
DISABLE_GOOGLE_OAUTH=true

# E2E specific timeouts (in milliseconds)
E2E_ACTION_TIMEOUT=10000
E2E_NAVIGATION_TIMEOUT=30000
E2E_TEST_TIMEOUT=60000

# Browser settings
E2E_HEADLESS=true
E2E_SLOW_MO=0

# Test data settings
E2E_TEST_USER_EMAIL=e2e-test@example.com
E2E_TEST_USER_PASSWORD=e2e-test-password
E2E_ADMIN_EMAIL=e2e-admin@example.com
E2E_ADMIN_PASSWORD=e2e-admin-password

# Database SSL settings (for Neon or other managed databases)
PGSSL=true
PGSSLMODE=require
