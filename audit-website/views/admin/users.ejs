<!-- Users Management View -->

<!-- Filters and Search -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card admin-card">
            <div class="card-body">
                <form method="GET" action="/admin/users" class="row g-3">
                    <div class="col-md-3">
                        <label for="search" class="form-label">Search Users</label>
                        <input type="text" class="form-control" id="search" name="search" 
                               placeholder="Email or name..." value="<%= filters.search || '' %>">
                    </div>
                    <div class="col-md-2">
                        <label for="tier" class="form-label">Tier</label>
                        <select class="form-select" id="tier" name="tier">
                            <option value="">All Tiers</option>
                            <option value="freemium" <%= filters.tier === 'freemium' ? 'selected' : '' %>>Freemium</option>
                            <option value="starter" <%= filters.tier === 'starter' ? 'selected' : '' %>>Starter</option>
                            <option value="professional" <%= filters.tier === 'professional' ? 'selected' : '' %>>Professional</option>
                            <option value="enterprise" <%= filters.tier === 'enterprise' ? 'selected' : '' %>>Enterprise</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="status" class="form-label">Status</label>
                        <select class="form-select" id="status" name="status">
                            <option value="">All Status</option>
                            <option value="active" <%= filters.status === 'active' ? 'selected' : '' %>>Active</option>
                            <option value="suspended" <%= filters.status === 'suspended' ? 'selected' : '' %>>Suspended</option>
                            <option value="cancelled" <%= filters.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-grid gap-2 d-md-flex">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Filter
                            </button>
                            <a href="/admin/users" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Clear
                            </a>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-grid">
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exportModal">
                                <i class="fas fa-download"></i> Export
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Results Summary -->
<div class="row mb-3">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0">
                    Showing <%= ((currentPage - 1) * 50) + 1 %>-<%= Math.min(currentPage * 50, totalCount) %> 
                    of <%= totalCount %> users
                </div>
            <div class="d-flex gap-2">
                <div class="dropdown">
                    <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-tools"></i> Bulk Actions
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" onclick="bulkAction('tier', 'professional')">
                            <i class="fas fa-level-up-alt"></i> Upgrade to Professional
                        </a></li>
                        <li><a class="dropdown-item" href="#" onclick="bulkAction('suspend', true)">
                            <i class="fas fa-ban"></i> Suspend Selected
                        </a></li>
                        <li><a class="dropdown-item" href="#" onclick="bulkAction('export', true)">
                            <i class="fas fa-download"></i> Export Selected
                        </a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Users Table -->
<div class="row">
    <div class="col-12">
        <div class="card admin-card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th width="40">
                                    <input type="checkbox" id="selectAll" class="form-check-input">
                                </th>
                                <th>User</th>
                                <th>Tier</th>
                                <th>Status</th>
                                <th>Usage</th>
                                <th>Subscription</th>
                                <th>Joined</th>
                                <th>Last Login</th>
                                <th width="150">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (users && users.length > 0) { %>
                                <% users.forEach(user => { %>
                                    <tr>
                                        <td>
                                            <input type="checkbox" class="form-check-input user-select" value="<%= user.id %>">
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar me-3">
                                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" 
                                                         style="width: 40px; height: 40px;">
                                                        <%= (user.full_name || user.email).charAt(0).toUpperCase() %>
                                                    </div>
                                                </div>
                                                <div>
                                                    <div class="fw-bold"><%= user.full_name || 'N/A' %></div>
                                                    <div class="text-muted small"><%= user.email %></div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <select class="form-select form-select-sm" 
                                                    onchange="updateUserTier('<%= user.id %>', this.value)"
                                                    style="width: auto;">
                                                <option value="freemium" <%= user.tier === 'freemium' ? 'selected' : '' %>>Freemium</option>
                                                <option value="starter" <%= user.tier === 'starter' ? 'selected' : '' %>>Starter</option>
                                                <option value="professional" <%= user.tier === 'professional' ? 'selected' : '' %>>Professional</option>
                                                <option value="enterprise" <%= user.tier === 'enterprise' ? 'selected' : '' %>>Enterprise</option>
                                            </select>
                                        </td>
                                        <td>
                                            <% if (user.subscription_status === 'active') { %>
                                                <span class="badge bg-success status-badge">Active</span>
                                            <% } else if (user.subscription_status === 'suspended') { %>
                                                <span class="badge bg-danger status-badge">Suspended</span>
                                            <% } else if (user.subscription_status === 'cancelled') { %>
                                                <span class="badge bg-warning status-badge">Cancelled</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary status-badge">Free</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="text-sm">
                                                <div><strong><%= user.audits_used || 0 %></strong> audits this month</div>
                                                <div class="text-muted">
                                                    Limit: <%= user.audits_per_month === -1 ? 'âˆž' : (user.audits_per_month || 'N/A') %>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <% if (user.subscription_amount) { %>
                                                <div class="text-sm">
                                                    <div><strong>$<%= user.subscription_amount %></strong></div>
                                                    <div class="text-muted"><%= user.billing_cycle || 'monthly' %></div>
                                                </div>
                                            <% } else { %>
                                                <span class="text-muted">Free</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="text-sm">
                                                <%= new Date(user.created_at).toLocaleDateString() %>
                                            </div>
                                        </td>
                                        <td>
                                            <% if (user.last_login_at) { %>
                                                <div class="text-sm">
                                                    <%= new Date(user.last_login_at).toLocaleDateString() %>
                                                </div>
                                            <% } else { %>
                                                <span class="text-muted">Never</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="table-actions">
                                                <button class="btn btn-sm btn-outline-info" 
                                                        onclick="viewUserDetails('<%= user.id %>')"
                                                        data-bs-toggle="tooltip" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                
                                                <% if (user.subscription_status !== 'suspended') { %>
                                                    <button class="btn btn-sm btn-outline-warning" 
                                                            onclick="suspendUser('<%= user.id %>', true)"
                                                            data-bs-toggle="tooltip" title="Suspend User">
                                                        <i class="fas fa-ban"></i>
                                                    </button>
                                                <% } else { %>
                                                    <button class="btn btn-sm btn-outline-success" 
                                                            onclick="suspendUser('<%= user.id %>', false)"
                                                            data-bs-toggle="tooltip" title="Reactivate User">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                <% } %>
                                                
                                                <div class="btn-group">
                                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" 
                                                            data-bs-toggle="dropdown">
                                                        <i class="fas fa-ellipsis-v"></i>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a class="dropdown-item" href="mailto:<%= user.email %>">
                                                            <i class="fas fa-envelope"></i> Send Email
                                                        </a></li>
                                                        <li><a class="dropdown-item" href="#" onclick="loginAsUser('<%= user.id %>')">
                                                            <i class="fas fa-sign-in-alt"></i> Login As User
                                                        </a></li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li><a class="dropdown-item text-danger" href="#" onclick="deleteUser('<%= user.id %>')">
                                                            <i class="fas fa-trash"></i> Delete User
                                                        </a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="9" class="text-center py-4">
                                        <div class="text-muted">
                                            <i class="fas fa-users fa-3x mb-3 opacity-50"></i>
                                            <h5>No users found</h5>
                                            <p>Try adjusting your search criteria or filters.</p>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Pagination -->
<% if (totalPages > 1) { %>
    <div class="row mt-4">
        <div class="col-12">
            <nav aria-label="Users pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item <%= !hasPrevPage ? 'disabled' : '' %>">
                        <a class="page-link" href="?page=<%= currentPage - 1 %><%= filters.search ? '&search=' + encodeURIComponent(filters.search) : '' %><%= filters.tier ? '&tier=' + filters.tier : '' %><%= filters.status ? '&status=' + filters.status : '' %>">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                    
                    <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %><%= filters.search ? '&search=' + encodeURIComponent(filters.search) : '' %><%= filters.tier ? '&tier=' + filters.tier : '' %><%= filters.status ? '&status=' + filters.status : '' %>">
                                <%= i %>
                            </a>
                        </li>
                    <% } %>
                    
                    <li class="page-item <%= !hasNextPage ? 'disabled' : '' %>">
                        <a class="page-link" href="?page=<%= currentPage + 1 %><%= filters.search ? '&search=' + encodeURIComponent(filters.search) : '' %><%= filters.tier ? '&tier=' + filters.tier : '' %><%= filters.status ? '&status=' + filters.status : '' %>">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
<% } %>

<!-- User Details Modal -->
<div class="modal fade" id="userDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">User Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="userDetailsContent">
                <!-- Content loaded via AJAX -->
            </div>
        </div>
    </div>
</div>

<!-- Export Modal -->
<div class="modal fade" id="exportModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Export Users</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="exportForm">
                    <div class="mb-3">
                        <label class="form-label">Export Format</label>
                        <select class="form-select" name="format">
                            <option value="csv">CSV</option>
                            <option value="excel">Excel</option>
                            <option value="json">JSON</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Include Fields</label>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="fields" value="email" checked>
                                    <label class="form-check-label">Email</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="fields" value="name" checked>
                                    <label class="form-check-label">Full Name</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="fields" value="tier" checked>
                                    <label class="form-check-label">Tier</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="fields" value="status">
                                    <label class="form-check-label">Status</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="fields" value="usage">
                                    <label class="form-check-label">Usage Stats</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="fields" value="subscription">
                                    <label class="form-check-label">Subscription</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="exportUsers()">Export</button>
            </div>
        </div>
    </div>
</div>

<script>
// User management functions
function viewUserDetails(userId) {
    AdminUI.makeRequest(`/admin/users/${userId}`)
        .then(data => {
            if (data.success) {
                const user = data.user;
                const content = `
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted">Basic Information</h6>
                            <table class="table table-sm">
                                <tr><td><strong>Email:</strong></td><td>${user.email}</td></tr>
                                <tr><td><strong>Full Name:</strong></td><td>${user.full_name || 'N/A'}</td></tr>
                                <tr><td><strong>Tier:</strong></td><td class="text-capitalize">${user.tier}</td></tr>
                                <tr><td><strong>Status:</strong></td><td>${user.subscription_status}</td></tr>
                                <tr><td><strong>Joined:</strong></td><td>${new Date(user.created_at).toLocaleDateString()}</td></tr>
                                <tr><td><strong>Last Login:</strong></td><td>${user.last_login_at ? new Date(user.last_login_at).toLocaleDateString() : 'Never'}</td></tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Usage & Limits</h6>
                            <table class="table table-sm">
                                <tr><td><strong>Audits/Month:</strong></td><td>${user.audits_per_month === -1 ? 'Unlimited' : user.audits_per_month}</td></tr>
                                <tr><td><strong>Max Pages:</strong></td><td>${user.max_internal_pages === -1 ? 'Unlimited' : user.max_internal_pages}</td></tr>
                                <tr><td><strong>Max External Links:</strong></td><td>${user.max_external_links === -1 ? 'Unlimited' : user.max_external_links}</td></tr>
                                <tr><td><strong>API Access:</strong></td><td>${user.api_access ? 'Yes' : 'No'}</td></tr>
                                <tr><td><strong>White Label:</strong></td><td>${user.white_label ? 'Yes' : 'No'}</td></tr>
                                <tr><td><strong>Scheduled Audits:</strong></td><td>${user.scheduled_audits ? 'Yes' : 'No'}</td></tr>
                            </table>
                        </div>
                    </div>
                `;
                document.getElementById('userDetailsContent').innerHTML = content;
                new bootstrap.Modal(document.getElementById('userDetailsModal')).show();
            }
        })
        .catch(error => {
            AdminUI.showNotification(error.message, 'error');
        });
}

function loginAsUser(userId) {
    if (confirm('Are you sure you want to login as this user? This action will be logged.')) {
        AdminUI.makeRequest(`/admin/users/${userId}/login-as`, { method: 'POST' })
            .then(data => {
                if (data.success) {
                    window.open(data.redirect_url, '_blank');
                }
            })
            .catch(error => {
                AdminUI.showNotification(error.message, 'error');
            });
    }
}

function deleteUser(userId) {
    if (confirm('Are you sure you want to delete this user? This action cannot be undone.')) {
        AdminUI.makeRequest(`/admin/users/${userId}`, { method: 'DELETE' })
            .then(data => {
                if (data.success) {
                    AdminUI.showNotification('User deleted successfully', 'success');
                    setTimeout(() => location.reload(), 1000);
                }
            })
            .catch(error => {
                AdminUI.showNotification(error.message, 'error');
            });
    }
}

function exportUsers() {
    const form = document.getElementById('exportForm');
    const formData = new FormData(form);
    
    AdminUI.showNotification('Export started. Download will begin shortly.', 'info');
    
    // Create download link
    const params = new URLSearchParams();
    for (const [key, value] of formData.entries()) {
        params.append(key, value);
    }
    
    window.open(`/admin/users/export?${params.toString()}`, '_blank');
    bootstrap.Modal.getInstance(document.getElementById('exportModal')).hide();
}

// Bulk actions
function bulkAction(action, value) {
    const selected = Array.from(document.querySelectorAll('.user-select:checked')).map(cb => cb.value);
    
    if (selected.length === 0) {
        AdminUI.showNotification('Please select at least one user', 'error');
        return;
    }
    
    if (confirm(`Are you sure you want to ${action} ${selected.length} user(s)?`)) {
        AdminUI.makeRequest('/admin/users/bulk', {
            method: 'POST',
            body: JSON.stringify({ action, value, users: selected })
        })
        .then(data => {
            if (data.success) {
                AdminUI.showNotification(`Bulk ${action} completed successfully`, 'success');
                setTimeout(() => location.reload(), 1000);
            }
        })
        .catch(error => {
            AdminUI.showNotification(error.message, 'error');
        });
    }
}

// Select all functionality
document.getElementById('selectAll').addEventListener('change', function() {
    const checkboxes = document.querySelectorAll('.user-select');
    checkboxes.forEach(cb => cb.checked = this.checked);
});
</script>
