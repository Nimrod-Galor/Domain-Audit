<%- include('../partials/header', { title: 'Analyzing Website - SiteScope', user: user }) %>

<!-- Loading Section -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <!-- Loading Animation -->
                <div class="mb-5">
                    <div class="spinner-border text-primary" style="width: 4rem; height: 4rem;" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>

                <!-- Main Message -->
                <h1 class="display-6 fw-bold mb-4">Analyzing Your Website</h1>
                <p class="lead text-muted mb-5">
                    We're running a comprehensive audit of <strong><%= url %></strong>
                </p>

                <!-- Progress Steps -->
                <div class="row g-4 mb-5">
                    <div class="col-md-3">
                        <div class="progress-step active" id="step1">
                            <div class="step-icon bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="fas fa-globe fa-lg"></i>
                            </div>
                            <h6>Fetching Page</h6>
                            <div class="progress mt-2" style="height: 4px;">
                                <div class="progress-bar bg-primary" style="width: 100%"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="progress-step" id="step2">
                            <div class="step-icon bg-light text-muted rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="fas fa-search fa-lg"></i>
                            </div>
                            <h6>SEO Analysis</h6>
                            <div class="progress mt-2" style="height: 4px;">
                                <div class="progress-bar bg-success" style="width: 0%"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="progress-step" id="step3">
                            <div class="step-icon bg-light text-muted rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="fas fa-tachometer-alt fa-lg"></i>
                            </div>
                            <h6>Performance</h6>
                            <div class="progress mt-2" style="height: 4px;">
                                <div class="progress-bar bg-info" style="width: 0%"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="progress-step" id="step4">
                            <div class="step-icon bg-light text-muted rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="fas fa-chart-line fa-lg"></i>
                            </div>
                            <h6>Final Report</h6>
                            <div class="progress mt-2" style="height: 4px;">
                                <div class="progress-bar bg-warning" style="width: 0%"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Current Status -->
                <div class="card bg-light">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="fas fa-info-circle text-primary me-2"></i>
                            Current Status
                        </h5>
                        <p class="card-text mb-3" id="statusMessage">
                            Initializing audit process...
                        </p>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary" 
                                 id="overallProgress" style="width: 10%"></div>
                        </div>
                        <small class="text-muted mt-2 d-block" id="progressText">10% Complete</small>
                    </div>
                </div>

                <!-- Estimated Time -->
                <div class="mt-4">
                    <small class="text-muted">
                        <i class="fas fa-clock me-1"></i>
                        Estimated time: <span id="estimatedTime">30-60 seconds</span>
                    </small>
                </div>

                <!-- Cancel Option -->
                <div class="mt-4">
                    <a href="/audit" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Start New Audit
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Auto-refresh for checking results -->
<script>
// Simulate progress updates (replace with actual progress polling)
let progress = 10;
let currentStep = 1;

const statusMessages = [
    "Connecting to website...",
    "Downloading page content...",
    "Analyzing HTML structure...",
    "Checking SEO elements...",
    "Testing page speed...",
    "Scanning for accessibility issues...",
    "Generating recommendations...",
    "Finalizing report..."
];

const steps = [
    { icon: 'globe', name: 'Fetching Page', color: 'primary' },
    { icon: 'search', name: 'SEO Analysis', color: 'success' },
    { icon: 'tachometer-alt', name: 'Performance', color: 'info' },
    { icon: 'chart-line', name: 'Final Report', color: 'warning' }
];

function updateProgress() {
    progress += Math.random() * 15;
    if (progress > 95) progress = 95;
    
    document.getElementById('overallProgress').style.width = progress + '%';
    document.getElementById('progressText').textContent = Math.floor(progress) + '% Complete';
    
    // Update status message
    const messageIndex = Math.floor((progress / 100) * statusMessages.length);
    if (messageIndex < statusMessages.length) {
        document.getElementById('statusMessage').textContent = statusMessages[messageIndex];
    }
    
    // Update step progress
    const stepProgress = Math.floor(progress / 25);
    if (stepProgress !== currentStep && stepProgress <= 4) {
        // Complete previous step
        if (currentStep > 0) {
            const prevStep = document.getElementById('step' + currentStep);
            prevStep.classList.add('completed');
            prevStep.querySelector('.step-icon').className = 
                'step-icon bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3';
            prevStep.querySelector('.progress-bar').style.width = '100%';
        }
        
        // Activate current step
        currentStep = stepProgress + 1;
        if (currentStep <= 4) {
            const currentStepEl = document.getElementById('step' + currentStep);
            currentStepEl.classList.add('active');
            currentStepEl.querySelector('.step-icon').className = 
                'step-icon bg-' + steps[currentStep - 1].color + ' text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3';
        }
    }
    
    // Check if we should redirect to results
    if (progress >= 95) {
        // In a real implementation, this would check the server for completion
        setTimeout(() => {
            // For demo purposes, redirect after progress reaches 100%
            document.getElementById('statusMessage').textContent = "Analysis complete! Redirecting to results...";
            document.getElementById('overallProgress').style.width = '100%';
            document.getElementById('progressText').textContent = '100% Complete';
            
            setTimeout(() => {
                // Replace with actual results URL
                window.location.href = '/audit/results?url=' + encodeURIComponent('<%= url %>');
            }, 2000);
        }, 1000);
        return;
    }
    
    // Continue updating
    setTimeout(updateProgress, 1000 + Math.random() * 2000);
}

// Start progress simulation
setTimeout(updateProgress, 1000);

