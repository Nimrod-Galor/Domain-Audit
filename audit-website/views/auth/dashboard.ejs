                messageDiv.style.display = 'block';
                
            } catch (error) {
                messageDiv.className = 'alert alert-danger';
                messageDiv.innerHTML = '<i class="fas fa-exclamation-circle me-2"></i>Network error. Please try again.';
                messageDiv.style.display = 'block';
            }
            
            // Re-enable button
            resendBtn.disabled = false;
            resendBtn.innerHTML = '<i class="fas fa-paper-plane me-1"></i>Resend Email';
