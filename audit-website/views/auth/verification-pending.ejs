<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Domain Audit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-search me-2"></i>Domain Audit
            </a>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body text-center p-5">
                        <div class="mb-4">
                            <i class="fas fa-envelope-circle-check fa-4x text-warning"></i>
                        </div>
                        
                        <h2 class="card-title mb-4">Check Your Email</h2>
                        
                        <p class="text-muted mb-4">
                            We've sent a verification email to:
                            <br>
                            <strong class="text-primary"><%= email %></strong>
                        </p>
                        
                        <p class="text-muted mb-4">
                            Please click the verification link in the email to complete your registration and start using Domain Audit.
                        </p>
                        
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note:</strong> The verification link will expire in 24 hours.
                        </div>
                        
                        <div class="d-grid gap-2 mt-4">
                            <button id="resendBtn" class="btn btn-outline-primary">
                                <i class="fas fa-paper-plane me-2"></i>
                                Resend Verification Email
                            </button>
                            
                            <a href="/auth/login" class="btn btn-link">
                                Back to Login
                            </a>
                        </div>
                        
                        <div id="resendMessage" class="mt-3" style="display: none;"></div>
                    </div>
                </div>
                
                <div class="text-center mt-4">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>
                        Didn't receive the email? Check your spam folder or click resend above.
                    </small>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('resendBtn').addEventListener('click', async function() {
            const btn = this;
            const messageDiv = document.getElementById('resendMessage');
            const email = '<%= email %>';
            
            // Disable button and show loading
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Sending...';
            
            try {
                const response = await fetch('/auth/resend-verification', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email: email })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    messageDiv.className = 'alert alert-success alert-dismissible fade show mt-3';
                    messageDiv.innerHTML = '<i class="fas fa-check-circle me-2"></i>' + result.message +
                        '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>';
                } else {
                    messageDiv.className = 'alert alert-danger alert-dismissible fade show mt-3';
                    messageDiv.innerHTML = '<i class="fas fa-exclamation-circle me-2"></i>' + result.message +
                        '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>';
                }
                
                messageDiv.style.display = 'block';
                
            } catch (error) {
                messageDiv.className = 'alert alert-danger alert-dismissible fade show mt-3';
                messageDiv.innerHTML = '<i class="fas fa-exclamation-circle me-2"></i>Network error. Please try again.' +
                    '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>';
                messageDiv.style.display = 'block';
            }
            
            // Re-enable button
            btn.disabled = false;
            btn.innerHTML = '<i class="fas fa-paper-plane me-2"></i>Resend Verification Email';
        });
    </script>
</body>
</html>
