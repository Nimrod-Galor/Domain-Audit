{
  "name": "domain-audit",
  "version": "2.0.0",
  "description": "Advanced domain audit tool with AI intelligence, web dashboard, and comprehensive analysis",
  "main": "lib/crawler.js",
  "type": "module",
  "bin": {
    "domain-audit": "bin/domain-audit.js",
    "data-analyzer": "bin/data-analyzer.js"
  },
  "scripts": {
    "dev": "node bin/domain-audit.js audit stefanbakery.com",
    "start": "node bin/domain-audit.js",
    "analyze": "node bin/data-analyzer.js",
    "web:start": "node web/app.js",
    "web:dev": "NODE_ENV=development nodemon web/app.js",
    "web:dev:win": "$env:NODE_ENV='development'; nodemon web/app.js",
    "web:health": "curl http://localhost:3000/health/ping",
    "session": "node web/scripts/session-manager.js",
    "session:clear": "node web/scripts/session-manager.js clear-all",
    "session:list": "node web/scripts/session-manager.js list",
    "migrate:tier-system": "node web/scripts/migrate-tier-system.js",
    "migrate:users": "node web/scripts/migrate-existing-users.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "COLLECT_COVERAGE=true node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "test:performance": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/performance",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:e2e:chrome": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:web": "vitest run web/tests",
    "test:web:watch": "vitest web/tests",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:web && npm run test:e2e",
    "test:all:no-e2e": "npm run test:unit && npm run test:integration && npm run test:web",
    "test:setup": "playwright install",
    "test:quick": "node --experimental-vm-modules node_modules/jest/bin/jest.js --passWithNoTests --silent",
    "test:business-intelligence": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/business-intelligence-minimal.test.js --verbose --silent",
    "test:ci": "npm run test:coverage && npm run test:integration && npm run test:e2e",
    "test:ci:no-e2e": "npm run test:coverage && npm run test:integration",
    "test:db:setup": "node scripts/setup-test-db.js setup",
    "test:db:teardown": "node scripts/setup-test-db.js teardown",
    "test:db:reset": "node scripts/setup-test-db.js reset",
    "db:dev:setup": "cross-env NODE_ENV=development node scripts/setup-databases.js development",
    "db:test:setup": "cross-env NODE_ENV=test node scripts/setup-databases.js test",
    "db:prod:setup": "cross-env NODE_ENV=production node scripts/setup-databases.js production",
    "db:dev:setup:win": "powershell -Command \"$env:NODE_ENV='development'; node scripts/setup-databases.js development\"",
    "db:test:setup:win": "powershell -Command \"$env:NODE_ENV='test'; node scripts/setup-databases.js test\"",
    "db:prod:setup:win": "powershell -Command \"$env:NODE_ENV='production'; node scripts/setup-databases.js production\"",
    "db:check:dev": "cross-env NODE_ENV=development node scripts/check-db-status.js",
    "db:check:test": "cross-env NODE_ENV=test node scripts/check-db-status.js",
    "db:check:prod": "cross-env NODE_ENV=production node scripts/check-db-status.js"
  },
  "keywords": [
    "seo",
    "link-audit",
    "web-crawling",
    "ai-analysis",
    "performance",
    "website-audit",
    "domain-analysis",
    "dashboard"
  ],
  "author": "Nimrod Galor",
  "license": "MIT",
  "dependencies": {
    "argon2": "^0.43.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "express-session": "^1.17.3",
    "helmet": "^8.1.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "puppeteer": "^24.15.0",
    "speakeasy": "^2.0.0",
    "stripe": "^18.4.0",
    "validator": "^13.15.15",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@jest/globals": "^30.0.5",
    "@playwright/test": "^1.54.2",
    "@vitest/coverage-v8": "^1.6.1",
    "babel-jest": "^30.0.5",
    "cross-env": "^10.0.0",
    "jest": "^30.0.5",
    "nodemon": "^3.0.1",
    "playwright": "^1.54.2",
    "supertest": "^7.1.4",
    "vitest": "^1.6.1"
  },
  "workspaces": [
    "web"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
