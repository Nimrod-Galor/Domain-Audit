{
  "name": "domain-audit",
  "version": "2.0.0",
  "description": "Advanced domain audit tool with AI intelligence and comprehensive analysis",
  "main": "lib/crawler.js",
  "bin": {
    "domain-audit": "bin/domain-audit.js",
    "data-analyzer": "bin/data-analyzer.js"
  },
  "type": "module",
  "scripts": {
    "dev": "node bin/domain-audit.js audit stefanbakery.com",
    "start": "node bin/domain-audit.js",
    "analyze": "node bin/data-analyzer.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "test:playwright": "playwright test",
    "test:all": "npm run test && npm run test:playwright",
    "test:setup": "playwright install"
  },
  "keywords": [
    "seo",
    "link-audit",
    "web-crawling",
    "ai-analysis",
    "performance"
  ],
  "author": "Nimrod Galor",
  "AI assistant": "Claude Sonnet 4",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.1.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@playwright/test": "^1.54.2",
    "jest": "^30.0.5",
    "playwright": "^1.54.2"
  }
}
