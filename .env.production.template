# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================

# Production Database (Separate Neon Database for Production)
# Note: Create a dedicated production database in Neon
DATABASE_URL=postgresql://prod_user:prod_password@prod-endpoint.neon.tech/domain_audit_prod?sslmode=require&channel_binding=require

# Production Session Configuration
SESSION_SECRET=super_secure_production_session_secret_change_this

# Environment
NODE_ENV=production
LOG_LEVEL=info

# PostgreSQL SSL Configuration
PGSSL=true
PGSSLMODE=require

# Production Features Enabled
DISABLE_EMAIL=false
DISABLE_STRIPE=false
DISABLE_GOOGLE_OAUTH=false

# Production Google OAuth
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret

# Production Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@domain.com
SMTP_PASS=your-production-app-password
VERIFICATION_URL_BASE=https://yourdomain.com

# Production Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Production Stripe Price IDs
STRIPE_PROFESSIONAL_MONTHLY_PRICE_ID=price_live_...
STRIPE_PROFESSIONAL_ANNUAL_PRICE_ID=price_live_...
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_live_...
STRIPE_ENTERPRISE_ANNUAL_PRICE_ID=price_live_...

# Production API Configuration
API_RATE_LIMIT_PROFESSIONAL=1000
API_RATE_LIMIT_ENTERPRISE=10000

# Application Configuration
PORT=3000
